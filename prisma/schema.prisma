generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Car {
  id           String   @id @default(uuid())
  brand        String   @db.Text
  name         String   @db.Text
  price        String   @db.Text
  downPayment  String   @db.Text
  year         String   @db.Text
  transmission String   @db.Text
  doors        String   @db.Text
  engine       String   @db.Text
  type         String   @db.Text
  color        String   @db.Text
  condition    String   @db.Text
  isPublish    Boolean?
}
